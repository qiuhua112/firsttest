<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- 或者 "oval" 表示圆形 -->

    <!-- 背景颜色 -->
    <solid android:color="#FFFFFF" />

    <!-- 边框 (可选) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- 大小 (可选) -->
    <size
        android:width="120dp"
        android:height="120dp" />
</shape>